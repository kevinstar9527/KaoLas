<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/player1_iv"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:background="#0fd" />

    <TextView
        android:id="@+id/player1_progress_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1_iv"
        android:layout_below="@+id/player1_iv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="0.05" />

    <TextView
        android:id="@+id/player1_all_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/player1_iv"
        android:layout_below="@+id/player1_iv"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="2.30" />

    <TextView
        android:id="@+id/player1_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player1_all_time_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:text="3期：老梁说故事" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/player1_name_tv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player1_mode_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_loop_single_normal" />

        <ImageView
            android:id="@+id/player1_prev_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_broadcast_player_prev_normal" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/player1_play_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/anchor_edit_play" />
            <ImageView
                android:id="@+id/player1_load_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_player_loading_small"
                android:visibility="invisible"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/player1_next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_broadcast_player_next_normal" />

        <ImageView
            android:id="@+id/player1_playlist_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/playlist_icon_normals" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/player1_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player1_iv"
        android:thumb="@drawable/ic_seekbar_button"
        android:layout_marginTop="-20dp"
        />

</RelativeLayout>