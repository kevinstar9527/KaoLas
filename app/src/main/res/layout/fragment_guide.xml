<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <kaola.zhanchengguo.com.kaola.other.widget.FullScreemVideoView
        android:id="@+id/guide_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/guide_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        android:layout_marginBottom="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/guide_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/guide_right_iv"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/guide_right_iv"/>


</RelativeLayout>
